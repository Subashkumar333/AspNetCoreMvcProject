@page
@model MasterAdminLoginModel

<div class="container-fluid" style="margin-top:50px">
    <div class="row mb-4">
        <div class="col-md-12">
            <center>
                <h1 class="display-4">Admin Login Page</h1>
            </center>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="font-weight-bold text-center mb-4">@ViewData["Title"]</h2>

                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email" class="font-weight-bold text-primary"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="font-weight-bold text-primary"></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label font-weight-bold"></label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
                </form>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-center">
            <center>
                <img src="~/images/logo/cycling_png22.png" class="img-fluid" style="max-width: 100%; height: auto; border-radius: 10px;" />
            </center>
        </div>
    </div>
</div>

