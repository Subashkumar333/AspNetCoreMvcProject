@using Zoro.Domain.ViewModel
@model List<CompletedOrderVM>

@{
    int count = 0;
}
<center><h3>Order History</h3></center>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model == null || !Model.Any())
            {
                <p>No completed orders found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-responsive-md text-xxl-center text-center">
                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>Order Date & Time</th>
                                <th>Order ID</th>
                                <th>User Name</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total Price</th>
                                <th>Order Status</th>
                                <th>Phone Number</th>
                                <th>Order Completed Date & Time</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@(++count)</td>
                                    <td>@order.CreateOn</td>
                                    <td>@order.OrderId</td>
                                    <td>@order.UserName</td>
                                    <td>@order.ProductName</td>
                                    <td>@order.Quantity</td>
                                    <td>@order.Price.ToString("C")</td>
                                    <td>@order.TotalPrice.ToString("C")</td>
                                    <td><button class="btn btn-success btn-sm">@order.OrderStatus.ToString()</button></td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.ModifiedOn</td>
                                    <td><img src="@order.Image" class="img-fluid" style="max-width: 100px; max-height: 100px;"></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+ZCvCkK3uLrW+8v7Fxkew+8dggbmGFIYB6z4bcu" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" integrity="sha384-Jn8fzpOj/6+3ovVabw5o9KozIvJF+P5B8PZH8LvguN4JjRZ4WoaXl2slKfL3PW6D" crossorigin="anonymous" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.table').DataTable({
                "pageLength": 5,
                "responsive": true
            });
        });
    </script>
}
