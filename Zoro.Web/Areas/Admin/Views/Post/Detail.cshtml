@using Zoro.Domain.ApplicationEnums;
@model Post

<div class="container">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Post Details
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Id</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Id</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Name</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Brand</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Brand.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Vehicle Type</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.VechicleTypes.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Bycle Categories </strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((BycycleCategories)Model.BycycleCategories)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Bycycle Types</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((BycycleTypes)Model.BycycleTypes)</p>
                        </div>
                    </div>

                   

                  
                   
                   

                    
                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Base Price</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @Model.PriceFrom</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Top-End Price</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @Model.PriceTo</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Ratings</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @Model.Ratings</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Created On</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @((Model.CreateOn == DateTime.MinValue) ? "NA" : Model.CreateOn.ToString())</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Created By</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @((Model.CreatedBy == String.Empty) ? "NA" : Model.CreatedBy)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Modified On</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @((Model.ModifiedOn == DateTime.MinValue) ? "NA" : Model.ModifiedOn.ToString())</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p class="card-text text-uppercase"><strong>Modified By</strong></p>
                        </div>
                        <div class="col-sm-8">
                            <p class="card-text">: @((Model.ModifiedBy == String.Empty) ? "NA" : Model.ModifiedBy)</p>
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    <img src="@Model.VehicleImage" width="100%" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
