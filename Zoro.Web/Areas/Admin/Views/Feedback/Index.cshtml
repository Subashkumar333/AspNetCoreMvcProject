@model List<ContactusData>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12 text-uppercase">
            <center><h3>Feedback/Contact us</h3></center>
        </div>
    </div>
</div>

<hr />

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">S.NO</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Message Date</th>
                            <th class="text-center">Message</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@(Model.IndexOf(item) + 1)</td>
                                <td style="text-align: center;">@item.YourName</td>
                                <td style="text-align: center;">@item.YourEmail</td>
                                <td style="text-align: center;">@item.YourPhone</td>
                                <td style="text-align: center;">@item.CreateOn.ToShortDateString()</td>
                                <td style="text-align: center;">@item.YourMessage</td>
                                <td class="d-flex align-item-center justify-content-center">
                                    <form asp-action="DeletefromConctactusdata" method="post" asp-route-id="@item.Id">
                                        <button class="btn btn-danger" data-id="@item.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-uppercase text-center text-warning">There is No Data</h2>
            </div>
        </div>
    </div>
}
@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+ZCvCkK3uLrW+8v7Fxkew+8dggbmGFIYB6z4bcu" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" integrity="sha384-Jn8fzpOj/6+3ovVabw5o9KozIvJF+P5B8PZH8LvguN4JjRZ4WoaXl2slKfL3PW6D" crossorigin="anonymous" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.table').DataTable({
                "pageLength": 5,
                "responsive": true
            });
        });
    </script>
}