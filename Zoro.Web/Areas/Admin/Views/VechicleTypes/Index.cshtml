@model List<VechicleTypes>

@{
    int count = 0;
}
<div class="container">
       <div class="row mb-4"> 
           <div class="col-md-6 text-uppercase">
               <h3>
                 Vechicle types
               </h3>
           </div>

        <div class="col-md-6 text-end">
            <a asp-area="Admin" asp-controller="VechicleTypes" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus-fill"></i>Create</a>
    </div>


       </div>

   </div>

   <hr />

<div class="table-responsive">
  <table class="table table-bordered table-stripped" id="table">
    <thead>
        <tr>
                <th style="text-align: center;">S.no</th>
                <th style="text-align: center;">Name</th>               
                <th style="text-align: center;">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var Item in Model)
            {
                <tr>
                    <td style="text-align: center;">@(++count)</td>
                    <td style="text-align: center;">@Item.Name</td>
                   
                    <td class="d-flex align-item-center justify-content-center">
                    <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="VechicleTypes" asp-action="Detail" asp-route-id="@Item.Id" class="btn btn-info"
                               data-toggle="tooltip" data-placement-top title="Detail"><i class="bi bi-info-circle"></i></a>

                            <a asp-area="Admin" asp-controller="VechicleTypes" asp-action="Edit" asp-route-id="@Item.Id" class="btn btn-warning"
                               data-toggle="tooltip" data-placement-top title="Edit"><i class="bi bi-pencil-square"></i></a>

                            <a asp-area="Admin" asp-controller="VechicleTypes" asp-action="Delete" asp-route-id="@Item.Id" class="btn btn-danger"
                               data-toggle="tooltip" data-placement-top title="Delete"><i class="bi bi-shield-fill-x"></i></a>
                    </div>
                    </td>
                </tr>
                

                
            }
     </tbody>

    </table>

  </div>


@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+ZCvCkK3uLrW+8v7Fxkew+8dggbmGFIYB6z4bcu" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" integrity="sha384-Jn8fzpOj/6+3ovVabw5o9KozIvJF+P5B8PZH8LvguN4JjRZ4WoaXl2slKfL3PW6D" crossorigin="anonymous" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.table').DataTable({
                "pageLength": 5,
                "responsive": true
            });
        });
    </script>
}