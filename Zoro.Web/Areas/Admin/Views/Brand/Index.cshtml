@model List<Brand>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase">
            <h3>Cycle Brand</h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus-fill"></i> Create</a>
        </div>
    </div>
</div>

<hr />

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="table">
            <thead>
                <tr>
                    <th style="text-align: center;">Name</th>
                    <th style="text-align: center;">Publish Year</th>
                    <th style="text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">@item.Name</td>
                        <td style="text-align: center;">@item.PublishYear</td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Brand" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Detail"><i class="bi bi-info-circle"></i></a>
                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete"><i class="bi bi-shield-fill-x"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-uppercase text-center text-warning">There is No Data</h2>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+ZCvCkK3uLrW+8dggbmGFIYB6z4bcu" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" integrity="sha384-Jn8fzpOj/6+3ovVabw5o9KozIvJF+P5B8PZH8LvguN4JjRZ4WoaXl2slKfL3PW6D" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js" integrity="sha384-GGk4S9CRml0b6BBds4STzQkOnJ7yQ6NS+3iRGGxq5oV16UX7f7rb4Q4ScCKXU7NV" crossorigin="anonymous" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#table').DataTable({
                "pageLength": 5,
                "responsive": true
            });
        });
    </script>
}
