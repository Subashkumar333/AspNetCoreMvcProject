
@model Brand
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-uppercase">Edit Brand</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border-1 border"> 
            <form method="post" enctype="multipart/form-data" >

                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label" ></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PublishYear" class="form-label"></label>
                    <input asp-for="@Model.PublishYear" class="form-control" />
                    <span asp-validation-for="@Model.PublishYear"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.BrandLogo" class="form-label"></label>
                    <input type="file" name="files" id="uploadbox" class="form-control" />
                </div>



                <div class="mb-3">
                   <a asp-controller="Brand" asp-action="Index" class="btn btn-warning">Back</a>
                   <button type="submit" class="btn btn-success">Update</button>
                </div>

                 
            </form>


        </div>

        <div class="col-md-4">
            @if(Model.BrandLogo!=null)
            {
                <img src="@Model.BrandLogo" class="img-fluid" />

            }
        </div>

    </div>
</div>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}