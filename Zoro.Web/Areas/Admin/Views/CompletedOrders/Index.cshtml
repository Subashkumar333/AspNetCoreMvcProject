@model List<CompletedOrders>
<div class="container">
    <div class="row mb-4">
        <div class="col-md-12 text-uppercase">
            <center><h3>Feedback/Contact us</h3></center>
        </div>
    </div>
</div>

<hr />

@if (Model.Count > 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">S.NO</th>
                            <th class="text-center">OrderID</th>
                            <th class="text-center">Product Name</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Total Price</th>
                            <th class="text-center">image</th>
                            <th class="text-center">order completed Time</th>
                            <th class="text-center">Order Status</th>
                            <th class="text-center">User Name</th>
                            <th class="text-center">User Phone</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@(Model.IndexOf(item) + 1)</td>
                                <td style="text-align: center;">@item.OrderId</td>
                                <td style="text-align: center;">@item.ProductName</td>
                                <td style="text-align: center;">@item.Price.ToString("c")</td>
                                <td style="text-align: center;">@item.Quantity</td>
                                <td style="text-align: center;">@item.TotalPrice.ToString("c")</td>
                                <td style="text-align: center;"><img src="@item.Image" class="img-fluid" style="max-width: 100px; max-height: 100px;" /></td>
                                <td style="text-align: center;">@item.ModifiedOn</td>
                                <td style="text-align: center;"><button class="btn btn-success btn-lg">@item.OrderStatus</button></td>
                                <td style="text-align: center;">@item.UserName</td>
                                <td style="text-align: center;">@item.PhoneNumber</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-uppercase text-center text-warning">There is No Data</h2>
            </div>
        </div>
    </div>
}  
@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+ZCvCkK3uLrW+8v7Fxkew+8dggbmGFIYB6z4bcu" crossorigin="anonymous" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js" integrity="sha384-Jn8fzpOj/6+3ovVabw5o9KozIvJF+P5B8PZH8LvguN4JjRZ4WoaXl2slKfL3PW6D" crossorigin="anonymous" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.table').DataTable({
                "pageLength": 5,
                "responsive": true
            });
        });
    </script>

}